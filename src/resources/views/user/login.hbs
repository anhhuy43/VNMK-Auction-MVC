<div class="login-form">
  <form method="POST" action="/user/loginUser">
    <label class="login-lbl"><h1>Login</h1></label>
    <div class="form-group">
      <label for="exampleInputEmail1">Email</label>
      <input
        type="email"
        class="form-control"
        id="email"
        name="email"
        placeholder="Enter email"
        required
      />
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Password</label>
      <input
        type="password"
        class="form-control"
        id="password"
        name="password"
        placeholder="Password"
        required
      />
    </div>
    {{#if userNotFound.isUserNotFound}}
        <p style="color: red;">User not found</p>
    {{/if}}
    {{#if wrongPassword.isWrongPassword}}
        <p style="color: red;">Wrong password. Try again!</p>
    {{/if}}
    <div class="btn-acp-login">
      <a href="/user/create">Create account</a>
      <button type="submit" class="btn btn-dark" style="border-radius: 16px;">Login</button>
    </div>
  </form>
</div>